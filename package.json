  "dependencies": {
    "@angular/cli": "^8.3.21",
    "@angular/compiler-cli": "^7.2.16",
    "concurrently": "^5.0.2",
    "dotenv": "^8.2.0",
    "enhanced-resolve": "^4.1.1",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.4"
  }
}
